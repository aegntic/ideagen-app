# Google Cloud Configuration (for production)
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json

# Database Configuration (for local testing)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=idea_engine
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password

# For Google Cloud SQL
DB_CONNECTION_NAME=your-project:us-central1:idea-gen-db

# Vector Database Configuration
# Primary vector database: 'elasticsearch' or 'chroma'
VECTOR_DB_TYPE=chroma
USE_MEMORY_FALLBACK=true

# Elasticsearch Configuration (if VECTOR_DB_TYPE=elasticsearch)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your-password

# ChromaDB Configuration (if VECTOR_DB_TYPE=chroma)
CHROMA_DB_PATH=./chroma_db

# API Keys (optional for testing)
PRODUCTHUNT_API_KEY=your_producthunt_key
SERP_API_KEY=your_serp_key
GITHUB_TOKEN=your_github_token
NETLIFY_TOKEN=your_netlify_token

# Server Configuration
PORT=8080
NODE_ENV=development

# Database SSL (for production)
DB_SSL=false